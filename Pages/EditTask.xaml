<Window x:Class="demotest.Pages.EditTask"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:demotest.Pages"
        mc:Ignorable="d"
        Title="EditTask" Height="700" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Редактирование" FontSize="26" FontWeight="Bold" Margin="195,10,139,602"/>
        <TextBox Style="{StaticResource placeHolder}"  Margin="28,115,25,521" Name="TaskName" BorderBrush="Black" Tag="Title"/>
        <TextBox Style="{StaticResource placeHolder}"  Margin="28,191,25,445" Name="TaskDateTime" BorderBrush="Black" Tag="DateTime"/>
        <ComboBox  Margin="28,265,25,371" Name="TaskStatus" BorderBrush="Black"/>
        <TextBox Style="{StaticResource placeHolder}"  Margin="28,341,25,295" Name="TaskWorkType" BorderBrush="Black" Tag="WorkType"/>
        <Label Visibility="Hidden" Width="0" Height="0" Name="TaskId"></Label>
        <Button Content="Обновить" Margin="93,436,110,179" Click="Button_Click"/>
    </Grid>
</Window>
