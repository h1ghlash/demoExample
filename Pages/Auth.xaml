<Window x:Class="demotest.Pages.Auth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:demotest.Pages"
        mc:Ignorable="d"
        Title="Auth" Height="450" Width="450"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Text="Авторизация" FontSize="24" FontWeight="Medium" Margin="140,10,146,337"></TextBlock>
        <TextBox Style="{StaticResource placeHolder}" Width="240" Height="30" Margin="0 0 0 200" BorderBrush="Black" Tag="Login" Name="login">
        </TextBox>
        <PasswordBox Width="240" Height="30" Margin="0 0 0 50" BorderBrush="Black" Tag="Password" Name="Pass">
        </PasswordBox>
        <Button Margin="101,234,101,146" Content="Войти" Click="Button_Click_1"/>
        <Button Margin="101,299,101,81" Content="Регистрация" Click="Button_Click"/>
    </Grid>
</Window>
